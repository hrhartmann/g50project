<p id="notice"><%= notice %></p>

<p>
  <strong>Nombre:</strong>
  <%= @campu.nombre %>
</p>

<p>
  <strong>Ubicacion:</strong>
  <%= @campu.ubicacion %>
</p>

<%= link_to 'Edit', edit_campu_path(@campu) %> |
<%= link_to 'Back', campus_path %>

<h1>Salas</h1>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Ubicacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campu.salas.each do |sala| %>
      <tr>
        <td><%= sala.nombre %></td>
        <td><%= sala.ubicacion %></td>
        <td><%= link_to 'Show', campu_sala_path(@campu, sala) %></td>
        <td><%= link_to 'Edit', edit_campu_sala_path(@campu, sala) %></td>
        <td><%= link_to 'Destroy', campu_sala_path(@campu, sala), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sala', new_campu_sala_path(@campu) %>
